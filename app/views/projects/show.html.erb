
	<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		
		<header>
			<p class="date"><%= @project.created_at.strftime('%A, %B %d %Y') %></p>
			<h1><%= @project.title %></h1>
			<hr>

		</header>
		<div id="content">
			<%= markdown  @project.description %>
			<div class="button_wrapper">
				<a href="<%= @project.link %>" class="project_button" target="_blank"> Visit <%= @project.title %></a>
			</div>
		
			<hr>
		</div>
	</div>

		

		<% if user_signed_in? %>
			<div id="admin_links">
				<%= link_to "Edit Project", edit_project_path(@project) %>
				<%= link_to "Delete project", project_path(@project), method: :delete, data: { confirm: "Are you Sure" } %>
			</div>
		<% end %>	

		<div id="share_box">
			<p>Share <%= @project.title %></p>
			<!-- Twitter -->
			<a onclick="javascript:window.open('http://twitter.com/share?text=<%=@project.title %> by @stuarttee93 - &amp;url=<%= url_for([@project, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
				<i class="fa fa-twitter"></i></a>
			<!-- Facebook -->
			<a onclick="javascript:window.open('http://www.facebook.com/sharer/sharer.php?u=<%= url_for([ @project, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
				<i class="fa fa-facebook-official"></i></a>
			<!-- Google Plus -->
			<a onclick="javascript:window.open('http://plus.google.com/share?url=<%= url_for([@project, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
				<i class="fa fa-google-plus"></i></a>
			<hr>
		</div>
		<%= render'comments' %>

</div>